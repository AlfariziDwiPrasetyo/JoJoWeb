<div class="wrap" style="width: 100%;">
    <h2 class="mt-4 text-center"><%= char.name %></h2>
    <p class="text-center"><%= char.japaneseName %></p>

    <div class="img-container m-auto d-flex justify-content-center w-50">
        <img src="https://jojos-bizarre-api.netlify.app/assets/<%= char.image %> %>" alt="" style="width: 350px; height: 350px; object-fit: contain;">
    </div>

    <blockquote class="text-center mt-4 fw-bold" style="font-family: 'Explora', cursive; font-size: 40px;">
        " <%= char.catchphrase %> "
    </blockquote>

    <div class="container- text-center pt-3 px-5">
        <h3 class="mt-5" style="color: indigo;">Nationality</h3>
        <p class="mt-3"><%= char.nationality  %></p>

        <h3 class="mt-5" style="color: indigo;">Abilities</h3>
        <p class="mt-3"><%= char.abilities  %></p>

        <h3 class="mt-5" style="color: indigo;">Family</h3>
        <% if (char.family == "none") { %>
            <p class="mt-3">Unknown</p>
        <% } else {%>
            <p class="mt-3"><%= char.family  %></p>
        <% } %>
        
        
        <h3 class="mt-5" style="color: indigo;">Status</h3>
        <% if (char.living == true) { %>
            <p class="mt-3 text-success">Living</p>
        <% } else {%>
            <p class="mt-3 text-danger">Dead</p>
        <% } %>
        
        <h3 class="mt-5" style="color: indigo;">Is Human</h3>
        <% if (char.isHuman == true) { %>
            <p class="mt-3">Human</p>
        <% } else {%>
            <p class="mt-3">Not Human</p>
        <% } %>
        
        
    </div>
</div>